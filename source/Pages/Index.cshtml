@page "{handler?}"
@namespace APSIM.Registration.Pages
@using Models
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>APSIM Upgrades/Registration System</title>
        <link rel="stylesheet" href="~/css/site.css" />
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.0.min.js"></script>
        <script type="text/javascript" src="~/js/registration.js"></script>
    </head>
    <body>
        <h1>APSIM Upgrades/Registration System</h1>
        <form method="post">
            <input type="hidden" asp-for="Sender" value="LandingPage">
            Email: <input type="text" name="email">
            <input type="submit" value="Go">
        </form>
        <p>Please enter your email address. If you have registered, you will be taken to the downloads page. If you have not registered, you will be prompted to do so.</p>
@if (!string.IsNullOrEmpty(Model.VersionFilter))
{
    <p>You have selected version @Model.VersionFilter.</p>
}
    </body>
</html>
